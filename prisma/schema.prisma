// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  EXPEDITEUR
  VOYAGEUR
  LES_DEUX
}

enum AdCategory {
  airline
  gaming
  travel
  fintech
  transport
  insurance
  other
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String
  phone         String?
  photo         String?
  role          UserRole  @default(LES_DEUX)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  trajets       Trajet[]
  colis         Colis[]
  sentMessages  Message[] @relation("SentMessages")
  receivedMessages Message[] @relation("ReceivedMessages")

  @@map("users")
}

model Trajet {
  id              String    @id @default(cuid())
  villeDepart     String
  villeArrivee    String
  dateVoyage      DateTime
  kilosDisponibles Float
  prixParKilo     Float
  description     String?   @db.Text
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  conversations   Conversation[]

  @@index([villeDepart, villeArrivee, dateVoyage])
  @@map("trajets")
}

model Colis {
  id              String    @id @default(cuid())
  villeEnvoi      String
  villeReception  String
  poids           Float
  description     String    @db.Text
  dateEnvoi       DateTime?
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // Relations
  conversations   Conversation[]

  @@index([villeEnvoi, villeReception])
  @@map("colis")
}

model Conversation {
  id          String    @id @default(cuid())
  colisId     String
  trajetId    String
  colis       Colis     @relation(fields: [colisId], references: [id], onDelete: Cascade)
  trajet      Trajet    @relation(fields: [trajetId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  messages    Message[]

  @@unique([colisId, trajetId])
  @@map("conversations")
}

model Message {
  id              String       @id @default(cuid())
  content         String       @db.Text
  conversationId  String
  senderId        String
  receiverId      String
  conversation    Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender          User         @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade)
  receiver        User         @relation("ReceivedMessages", fields: [receiverId], references: [id], onDelete: Cascade)
  createdAt       DateTime     @default(now())

  @@index([conversationId, createdAt])
  @@map("messages")
}

model AdCampaign {
  id             String      @id @default(cuid())
  advertiserName String
  category       AdCategory
  imageUrl       String
  targetUrl      String
  title          String?
  description    String?
  budget         Float
  costPerClick   Float
  impressions    Int         @default(0)
  clicks         Int         @default(0)
  priority       Int         @default(0)
  startDate      DateTime
  endDate        DateTime
  isActive       Boolean     @default(true)
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  impressionsLog AdImpression[]
  clicksLog      AdClick[]

  @@index([isActive, startDate, endDate])
  @@index([category, priority])
  @@map("ad_campaigns")
}

model AdImpression {
  id           String     @id @default(cuid())
  adCampaignId String
  userId       String
  placement    String
  ipHash       String
  createdAt    DateTime   @default(now())

  adCampaign   AdCampaign @relation(fields: [adCampaignId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([adCampaignId, createdAt])
  @@map("ad_impressions")
}

model AdClick {
  id           String     @id @default(cuid())
  adCampaignId String
  userId       String
  placement    String
  ipHash       String
  createdAt    DateTime   @default(now())

  adCampaign   AdCampaign @relation(fields: [adCampaignId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([adCampaignId, createdAt])
  @@map("ad_clicks")
}
